# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here
MANAGER_CHAT_ID=your_telegram_chat_id

# PocketBase Configuration
PB_URL=http://your-pocketbase-server:8090
PB_TOKEN=your_pocketbase_auth_token

# API Configuration
VITE_API_URL=https://your-api-url.vercel.app

# Security Settings (optional)
TG_INITDATA_MAX_AGE_SECONDS=300  # 5 minutes (default)
ORDER_RATE_WINDOW_MS=300000      # 5 minutes
ORDER_RATE_MAX=30                # 30 orders per window

# CORS Configuration (comma-separated origins)
CORS_ALLOW_ORIGINS=https://your-frontend.vercel.app,https://your-domain.com

# Admin API Key (for cache invalidation endpoint)
ADMIN_API_KEY=your_secure_random_key_here

# Debug mode (only enable locally, never in production)
# DEBUG_AUTH_ENABLED=true
