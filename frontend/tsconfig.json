{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    // define your module paths here:
    "paths": {
      "@framework/*": [
        "./src/framework/*"
      ],
      "@style/*": [
        "./src/assets/styles/*"
      ],
      "@image/*": [
        "./src/assets/images/*"
      ],
      "@lib/*": [
        "./src/lib/*"
      ]
    },
    "baseUrl": "."
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}